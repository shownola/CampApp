<%- include('../partials/header') %>

<div class="container" style="width: 40%; margin: 0 auto;">
  <h1 class="text-center pb-5">Edit Comment</h1>

  <form class=""  action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
    <div class="form-group">
      <input class="form-control" type="text" placeholder="text" name="comment[text]" value="<%= comment.text %>">
    </div>


    <div class="form-group">
      <button class="btn btn-lg btn-block btn-primary" type="Submit" name="button">Submit</button>
    </div>
  </form>

  <a href="/campgrounds">Back</a>
</div>
